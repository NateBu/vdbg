{
	"name": "vdbg-debugger",
	"description": "Visual Debugger - An extensible visual debugger",
	"version": "0.0.20",
	"publisher": "vytools",
	"private": true,
	"icon": "media/logo128.png",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/natebu/vdbg"
	},
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Debuggers",
		"Visualization"
	],
	"activationEvents": [
		"onDebug",
		"workspaceContains:.vscode/vy.json",
		"onWebviewPanel:vDbg"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vDbg.start",
				"title": "Start vdbg",
				"category": "vDbg"
			},
			{
				"command": "vyToolsGroups.infoNodule",
				"title": "Nodule Information"
			},
			{
				"command": "vyToolsGroups.openNodule",
				"title": "Open Nodule",
				"icon": "$(play-circle)"
			},
			{
				"command": "vyToolsGroups.refreshGroup",
				"title": "Check for new Nodules",
				"icon": "$(refresh)"
			},
			{
				"command": "vyToolsGroups.addGroup",
				"title": "Add vy.tools Group",
				"icon": "$(add)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "vyToolsGroups.addGroup",
					"when": "view == vyToolsGroups",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "vyToolsGroups.refreshGroup",
					"when": "view == vyToolsGroups && viewItem == vy_group",
					"group": "inline"
				},
				{
					"command": "vyToolsGroups.openNodule",
					"when": "view == vyToolsGroups && viewItem == vy_nodule",
					"group": "inline"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vytools",
					"title": "VyTools",
					"icon": "resources/vy-text.svg"
				}
			]
		},
		"views": {
			"vytools": [
				{
					"id": "vyToolsGroups",
					"name": "Vy Groups",
					"icon": "resources/vy-text.svg",
					"contextualTitle": "Vy Groups"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -w -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.47.0",
		"@types/vscode-webview": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"adm-zip": "^0.5.10",
		"json5": "^2.2.3"
	}
}
